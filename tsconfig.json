{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src/**.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
